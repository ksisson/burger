<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Eat The Burger</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="https://db3h9mjhnho7v.cloudfront.net/news_cover_jumbo/5931f5cdbe854/avobun-1780.jpg" height="300px">
        </div>
    </div>
    
<div class="row">
        

        <div class="col-md-6">
            <h2 class="text-center">Made Burgers</h2>
        <ol>
        {{#each burger}}
            {{#unless devoured}}
            <li>
            {{burger_name}}

            <button class="eat btn-warning" id="{{id}}">
                Devour It
            </button>
        </li>
        <br>
            {{/unless}}
        {{/each}}
        </ol>
        </div>

        <div class="col-md-6">
            <h2 class="text-center">Consumed Burgers</h2>
        <ol>
        {{#each burger}}
            {{#if devoured}}
            <li>
            {{burger_name}}

            <button class="delburger btn-warning" id="{{id}}">
                Delete
            </button>
        </li>
        <br>
            {{/if}}
        {{/each}}
        </ol>
        </div>
</div>
<div class="row text-center">
    <div class="col-md-12">

    <h2>Make A Burger</h2>
    <form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit" id="submitbtn" class="btn-warning">Cook It</button>
    </form>
    </div>
</div>
</div>